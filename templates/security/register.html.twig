{% extends 'base_home.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    <style>
        .logo {
            width: 200px;
        }

        .errorMessage {
            color: red;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container pt-4">
        <div class="d-flex justify-content-center mb-5">
            <div class="card">
                <div class="d-flex mt-3 ms-3">
                    <a href="/">
                        <button class="btn btn-primary"><i class="fa-solid fa-arrow-left"></i> Retourner Ã  l'accueil
                        </button>
                    </a>
                </div>

                <div class="text-center">
                    <img src="{{ asset('img/logo.png') }}" class="card-img-top logo" alt="logo">
                    <h3>Nouveau compte</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                    <div class="error" style="color: red">{{ form_errors(form.email) }}</div>


                    <div class="d-flex mb-3">
                        <div class="ma-4">
                            {{ form_label(form.password.first) }}
                            {{ form_widget(form.password.first) }}
                        </div>
                        <div class="ms-4">
                            {{ form_label(form.password.second) }}
                            {{ form_widget(form.password.second) }}
                        </div>
                    </div>
                    <small class="text-muted">{{ form_help(form.password.first) }}</small>
                    <div class="errorMessage">{{ form_errors(form.password.first) }}</div>
                    <div class="errorMessage">{{ form_errors(form.password.second) }}</div>


                    {% if app.request.get('_route') == 'app_register' %}

                        <div class="d-flex mb-3">
                            <div class="ma-4">
                                {{ form_label(form.city) }}
                                {{ form_widget(form.city) }}
                            </div>
                            <div class="ms-4">
                                {{ form_label(form.zipCode) }}
                                {{ form_widget(form.zipCode) }}
                            </div>
                        </div>
                        <div class="errorMessage">{{ form_errors(form.city) }}</div>
                        <div class="errorMessage">{{ form_errors(form.zipCode) }}</div>

                        {{ form_label(form.address) }}
                        {{ form_widget(form.address) }}
                        <div class="error" style="color: red">{{ form_errors(form.address) }}</div>


                        {{ form_label(form.phoneNumber) }}
                        {{ form_widget(form.phoneNumber) }}
                        <small class="text-muted">{{ form_help(form.phoneNumber) }}</small>
                        <div class="errorMessage">{{ form_errors(form.phoneNumber) }}</div>

                    {% else %}

                        {{ form_label(form.siret) }}
                        {{ form_widget(form.siret) }}
                        <div class="error" style="color: red">{{ form_errors(form.siret) }}</div>

                        {{ form_label(form.siren) }}
                        {{ form_widget(form.siren) }}
                        <div class="errorMessage">{{ form_errors(form.siren) }}</div>
                        {{ form_label(form.company_name) }}
                        {{ form_widget(form.company_name) }}
                        <div class="error" style="color: red">{{ form_errors(form.company_name) }}</div>

                    {% endif %}

                    <div class="errorMessage">{{ form_errors(form) }}</div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-lg btn-primary mt-3">Valider</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
