{% extends 'base_home.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    <style>
        .logo {
            width: 200px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-center mt-5 mb-5">
            <div class="card">
                <div class="d-flex mt-3 ms-3">
                    <a href="/"><button class="btn btn-primary"><i class="fa-solid fa-arrow-left"></i> Retourner Ã  l'accueil</button></a>
                </div>

                <div class="text-center">
                    <img src="{{ asset('img/logo.png') }}" class="card-img-top logo" alt="logo">
                    <h3>Nouveau compte</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email) }}
                        <div class="error" style="color: red">{{ form_errors(form.email) }}</div>


                        <div class="">
                            {{ form_widget(form.password) }}
                            <div class="list-group" style="color: red">{{ form_errors(form.password) }}</div>
                        </div>

                        {{ form_label(form.address) }}
                        {{ form_widget(form.address) }}
                        <div class="error" style="color: red">{{ form_errors(form.address) }}</div>


                        <div class="d-flex mb-3">
                            <div class="ma-4">
                                {{ form_label(form.city) }}
                                {{ form_widget(form.city) }}
                                <div class="error" style="color: red">{{ form_errors(form.city) }}</div>
                            </div>
                            <div class="ms-4">
                                {{ form_label(form.zipCode) }}
                                {{ form_widget(form.zipCode) }}
                                <div class="error" style="color: red">{{ form_errors(form.zipCode) }}</div>
                            </div>
                        </div>


                        {{ form_label(form.phoneNumber) }}
                        {{ form_widget(form.phoneNumber) }}
                        <div class="error" style="color: red">{{ form_errors(form.phoneNumber) }}</div>


                        <div style="color: blue" {{ form_errors(form) }}</div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary mt-3">Enregistrer</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
