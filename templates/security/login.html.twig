{% extends 'base_home.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    <style>
        .logo {
            width: 200px;
        }

        .card-login {
            width: 500px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container pt-4">
        <div class="d-flex justify-content-center mb-5">
            <div class="card card-login">
                <div class="d-flex mt-3 ms-3">
                    <a href="/">
                        <button class="btn btn-sncf"><i class="fa-solid fa-arrow-left"></i> Retourner à l'accueil
                        </button>
                    </a>
                </div>

                <div class="text-center">
                    <img src="{{ asset('img/logo.png') }}" class="card-img-top logo" alt="logo">
                    <h3>Connexion</h3>
                </div>
                <div class="card-body">
                    <form action="{{ path('app_login') }}" method="post"
                          class="d-flex flex-column justify-content-center">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                               class="form-control mb-3"
                               autocomplete="email" required autofocus>
                        <label for="inputPassword">Password</label>
                        <input type="password" name="password" id="inputPassword" class="form-control"
                               autocomplete="current-password" required>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >


                        <div class="d-flex justify-content-center">
                            <button class="btn btn-lg btn-orange mt-4" type="submit">Connexion</button>
                        </div>

                        <a href="{{ path('app_forgot_password_request') }}" class="text-center mt-3">Mot de passe oublié
                            ?</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
