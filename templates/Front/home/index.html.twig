{% extends 'base_home.html.twig' %}

{% block title %}PA EXPRESS{% endblock %}

{% block body %}
    <div class="text-end me-4 mt-2">
        <a href="/shopping">
            <button type="button" class="btn btn-outline-dark">Panier <i class="fa-solid fa-cart-shopping"></i></button>
        </a>
    </div>

    <div class="container">
        <h1 class="text-center mb-3">Bienvenue chez PA EXPRESS</h1>
        <div class="row border shadow-sm rounded p-3 mb-4 bg-white">
            <div class="col-sm-6 d-flex flex-column pe-3">

                <div class="mb-3">
                    <label for="departureStationSearch">Gare de départ : </label>
                    <input class="form-control" type="text" id="departureStationSearch"
                           placeholder="Paris-Montparnasse">
                    <ul class="list-group" id="listStationsDeparture"></ul>
                </div>

                <div class="d-flex flex-row align-items-center">
                    <div id="departureStation"></div>
                    <i class="fa-solid fa-pencil mb-3 ms-3" id="updateDepartureStation"></i>
                </div>

                <div class="mb-3">
                    <label for="arrivalStationSearch">Gare d'arrivée : </label>
                    <input class="form-control" type="text" id="arrivalStationSearch" placeholder="Poitiers">
                    <ul class="list-group" id="listStationsArrival"></ul>
                </div>

                <div class="d-flex flex-row align-items-center">
                    <div id="arrivalStation"></div>
                    <i class="fa-solid fa-pencil mb-3 ms-3" id="updateArrivalStation"></i>
                </div>

            </div>

            <div class="col-sm-6 flex ps-5">
                {{ include('Front/home/_form.html.twig') }}
            </div>
        </div>

        <div class="accordion mb-5">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button {% if (travels or noTravels) %}collapsed{% endif %}" type="button"
                            data-bs-toggle="collapse" data-bs-target="#collapseOne"
                            aria-expanded="{% if (travels or noTravels) %}false{% else %}true{% endif %}"
                            aria-controls="collapseOne">
                        Sélectionnez une gare sur la carte
                    </button>
                </h2>
                <div id="collapseOne"
                     class="accordion-collapse collapse {% if (travels == false and noTravels == false) %}show{% endif %}"
                     aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <div id="map" style="height: 500px; width: 100%"></div>
                    </div>
                </div>
            </div>
        </div>

        {% if travels %}
            {% for travel in travels %}
                <div class="row mb-5">
                    <div class="col-sm-8">
                        <div>
                            <div class=" d-flex border shadow-sm rounded px-3 me-4 bg-white pt-3">
                                <div class="d-flex flex-column">
                                    <p class="fw-bold">{{ travel.getDateDeparture()|date('d-m-Y') }}</p>
                                    <div class="d-flex flex-row">
                                        <p class="fw-bold">{{ travel.getTimeDeparture()|date('H') }}</p>
                                        <p class="fw-bold">h</p>
                                        <p class="fw-bold">{{ travel.getTimeDeparture()|date('i') }}</p>
                                    </div>
                                </div>

                                <div class="d-flex flex-column mx-4">
                                    <p>{{ travel.getLine().getNameStationDeparture() }}</p>
                                    <p>{{ travel.getLine().getNameStationArrival() }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    {# <div class="col-sm-2"> #}
                    {# <div onclick="addOption({{ travel.id }}, 1)" class="border shadow-sm rounded px-3 bg-white button-price"> #}
                    {# <p class="text-center pt-3">Classe 1</p> #}
                    {# <p class="text-center">{{ travel.getPriceClass1  }} €</p> #}
                    {# </div> #}
                    {# </div> #}
                    {# <div class="col-sm-2"> #}
                    {# <div onclick="addOption({{ travel.id }}, 2)" class="border shadow-sm rounded px-3 ms-3 bg-white button-price"> #}
                    {# <p class="text-center pt-3">Classe 2</p> #}
                    {# <p class="text-center">{{ travel.getPriceClass2  }} €</p> #}
                    {# </div> #}
                    {# </div> #}
                    <div class="col-sm-2">
                        <div onclick="selectOption(
                        {{ travel.id }},
                                1,
                        {{ travel.getPriceClass1 }},
                                '{{ travel.getDateDeparture()|date('d-m-Y') }}',
                        {{ travel.getTimeDeparture()|date('H') }} +'h'+{{ travel.getTimeDeparture()|date('i') }},
                                '{{ travel.getLine().getNameStationDeparture() }}',
                                '{{ travel.getLine().getNameStationArrival() }}'
                                )" class="border shadow-sm rounded px-3 bg-white button-price" data-bs-toggle="modal"
                             data-bs-target="#modalOptions">
                            <p class="text-center pt-3">Classe 1</p>
                            <p class="text-center">{{ travel.getPriceClass1 }} €</p>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div onclick="selectOption(
                        {{ travel.id }},
                                2,
                        {{ travel.getPriceClass2 }},
                                '{{ travel.getDateDeparture()|date('d-m-Y') }}',
                        {{ travel.getTimeDeparture()|date('H') }} +'h'+{{ travel.getTimeDeparture()|date('i') }},
                                '{{ travel.getLine().getNameStationDeparture() }}',
                                '{{ travel.getLine().getNameStationArrival() }}'
                                )" class="border shadow-sm rounded px-3 ms-3 bg-white button-price"
                             data-bs-toggle="modal" data-bs-target="#modalOptions">
                            <p class="text-center pt-3">Classe 2</p>
                            <p class="text-center">{{ travel.getPriceClass2 }} €</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endif %}

        {% if noTravels %}
            <p>Aucun résultat pour la recherche</p>
        {% endif %}
    </div>


    <div class="modal fade" id="modalOptions" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
         aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Détails du voyage</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="bodyModal">
                </div>
                <div class="modal-footer" id="footerModal">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                    <button type="button" class="btn btn-primary" onclick="addOption()">Ajouter au panier</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        const linkAsset = "{{ asset('img/') }}"
    </script>

    <script src="{{ asset('js/home.js') }}"></script>

{% endblock %}
