{% extends 'base_home.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <a href="/home/shopping">Panier</a>

    <div class="container">
        <h1 class="text-center mb-3">Bienvenue chez PA EXPRESS</h1>
        <div class="row border shadow-sm rounded p-3 mb-4 bg-white">
            <div class="col-sm-6 d-flex flex-column">

                <div class="mb-3">
                    <label for="departureStationSearch">Gare de départ : </label>
                    <input class="form-control" type="text" id="departureStationSearch" placeholder="Paris-Montparnasse">
                </div>

                <div class="d-flex flex-row">
                    <div id="departureStation"></div>
                    <i class="fas fa-edit" id="updateDepartureStation"></i>
                </div>

                <div class="mb-3">
                    <label for="arrivalStationSearch">Gare d'arrivée : </label>
                    <input class="form-control" type="text" id="arrivalStationSearch" placeholder="Poitiers">
                </div>

                <div class="d-flex flex-row">
                    <div id="departureStation"></div>
                    <i class="fas fa-edit" id="updateDepartureStation"></i>
                </div>

            </div>
            <div class="col-sm-6 flex">
                {{ include('Front/home/_form.html.twig') }}
            </div>
        </div>

        <div class="accordion mb-5">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Sélectionnez une gare sur la carte
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <div id="map" style="height: 500px; width: 100%"></div>
                    </div>
                </div>
            </div>
        </div>

        {% if travels %}
            {% for travel in travels %}
                <div class="row mb-5">
                    <div class="col-sm-8">
                        <div>
                            <div class=" d-flex border shadow-sm rounded px-3 me-4 bg-white">
                                <div class="d-flex flex-column">
                                    <p class="fw-bold">{{ travel.getDateDeparture()|date('d-m-Y')}}</p>
                                    <div class="d-flex flex-row">
                                        <p class="fw-bold">{{ travel.getTimeDeparture()|date('H')}}</p>
                                        <p class="fw-bold">h</p>
                                        <p class="fw-bold">{{ travel.getTimeDeparture()|date('i')}}</p>
                                    </div>
                                </div>

                                <div class="d-flex flex-column mx-4">
                                    <p>{{ travel.getLine().getNameStationDeparture() }}</p>
                                    <p>{{ travel.getLine().getNameStationArrival() }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div onclick="addOption({{ travel.id }}, 1)" class="border shadow-sm rounded px-3 bg-white">
                            <p>Classe 1</p>
                            <p>{{ travel.getPriceClass1  }} €</p>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div onclick="addOption({{ travel.id }}, 2)" class="border shadow-sm rounded px-3 ms-3 bg-white">
                            <p>Classe 2</p>
                            <p>{{ travel.getPriceClass2  }} €</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endif %}

        {% if noTravels %}
            <p>Aucun voyages pour cette date à cette heure</p>
        {% endif %}
    </div>

    <div id="arrivalStation"></div>
    <i class="fas fa-edit" id="updateArrivalStation"></i>

    <div id="listStationsDeparture"></div>
    <div id="listStationsArrival"></div>

    <script>
        const linkAsset = "{{ asset('img/') }}"
    </script>

    <script src="{{ asset('js/home.js') }}"></script>

    <script>
        $(document).ready(function() {
            $('select').formSelect();
        });
    </script>

{% endblock %}
