{% extends 'base_home.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <script src="https://polyfill.io/v3/polyfill.min.js?version=3.52.1&features=fetch"></script>
    <script src="https://js.stripe.com/v3/"></script>
    <div class="container">
        <a href="/" class="mt-5"><button type="button" class="btn btn-outline-dark mt-4">Retour</button></a>

        <div class="row">
            <div class="col-sm-12">

                {% if travels %}
                    {% for key, travel in travels %}
                        <div class="mt-5 d-flex justify-content-between align-items-center border shadow-sm rounded px-3 me-4 bg-white pt-3">
                            <p class="fw-bold">{{ travel[0].getDateDeparture()|date('d-m-Y') }}</p>

                            <div class="d-flex flex-column">
                                <div class="d-flex flex-row align-items-center">
                                    <p class="fw-bold m-0">{{ travel[0].getTimeDeparture()|date('H') }}</p>
                                    <p class="fw-bold m-0">h</p>
                                    <p class="fw-bold m-0">{{ travel[0].getTimeDeparture()|date('i') }}</p>
                                    <i class="fa-solid fa-arrow-right mx-3"></i>
                                    <p class="m-0">{{ travel[0].getLine().getNameStationDeparture() }}</p>
                                </div>
                                <div class="d-flex flex-row align-items-center my-3">
                                    <p class="fw-bold m-0">{{ travel[0].getTimeArrival()|date('H') }}</p>
                                    <p class="fw-bold m-0">h</p>
                                    <p class="fw-bold m-0">{{ travel[0].getTimeArrival()|date('i') }}</p>
                                    <i class="fa-solid fa-arrow-right mx-3"></i>
                                    <p class="m-0">{{ travel[0].getLine().getNameStationArrival() }}</p>
                                </div>
                            </div>

                            <div>
                                {% for keyTraveler, traveler in travelers[key] %}
                                    <div>
                                        <p class="mb-2"><i class="fa-solid fa-user"></i> x {{ traveler[0] }} {{ traveler[1] }}</p>
                                    </div>
                                {% endfor %}

                                {% if travel[1] == 1 %}
                                    <p>Total : {{ travel[0].getPriceClass1()*(travelers[key]|length) }} €</p>
                                {% else %}
                                    <p>Total : {{ travel[0].getPriceClass2()*(travelers[key]|length) }} €</p>
                                {% endif %}
                            </div>

                            <div>
                                {{ include('Front/home/_delete_form.html.twig') }}
                            </div>
                        </div>


                    {% endfor %}

                    <p class="mt-3">Total du panier : {{ total }} €</p>

                    <section>
                        {% if app.user %}
                        <form action="{{ path('payment') }}" method="POST">
                            <button class="btn btn-primary" type="submit" id="checkout-button">Payer</button>
                            {% else %}
                            <form action="/login" method="POST">
                                <button class="btn btn-primary" type="submit">Payer</button>
                                {% endif %}


                            </form>
                    </section>
                {% else %}
                    <div class="d-flex flex-column align-items-center mt-5">
                        <h3>Votre panier est vide</h3>
                        <a href="/" class="mt-5"><button type="button" class="btn btn-primary">Rechercher un voyage</button></a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
