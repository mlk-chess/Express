{% extends 'base_back.html.twig' %}

{% block title %}Wagon index{% endblock %}

{% block body %}
    <h1>Wagon index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Classe</th>
                <th>Type</th>
                <th>PlaceNb</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for wagon in wagons %}
            <tr>
                <td>{{ wagon.id }}</td>
                <td>{{ wagon.class }}</td>
                <td>{{ wagon.type }}</td>
                <td>{{ wagon.placeNb }}</td>
                <td>
                    <form method="post" action="{{ path('admin_wagon_edit', {'id': wagon.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('edit' ~ wagon.id) }}">
                        <button class="btn">Editer</button>
                    </form>
                    {{ include('Back/wagon/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas de wagon enregistr√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_wagon_new') }}">Nouveau wagon</a>
{% endblock %}
