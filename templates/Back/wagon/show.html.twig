{% extends 'base_back.html.twig' %}

{% block title %}Wagon{% endblock %}

{% block body %}
    <h1>Wagon</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ wagon.id }}</td>
            </tr>
            <tr>
                <th>Classe</th>
                <td>{{ wagon.class }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ wagon.type }}</td>
            </tr>
            <tr>
                <th>PlaceNb</th>
                <td>{{ wagon.placeNb }}</td>
            </tr>
        </tbody>
    </table>
    <hr>
    <h4>Liste des wagons</h4>
    <thead>
    <tr>
        <th>Id</th>
        <th>Classe</th>
        <th>Type</th>
        <th>Nb places</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% for wagon in train.wagons %}
        <tr>
            <td>{{ wagon.id }}</td>
            <td>{{ wagon.class }}</td>
            <td>{{ wagon.type }}</td>
            <td>{{ wagon.placeNb }}</td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4">Aucun train existant</td>
        </tr>
    {% endfor %}
    </tbody>
    </table>

    <a href="{{ path('wagon_index') }}">back to list</a>

    <a href="{{ path('wagon_edit', {'id': wagon.id}) }}">edit</a>

    {{ include('Front/wagon/_delete_form.html.twig') }}
{% endblock %}
