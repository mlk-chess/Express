{% extends 'base_back.html.twig' %}

{% block title %}PA EXPRESS{% endblock %}

{% block body %}
    <h1>Utilisateurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Company Name</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.companyName ?? "Standard User" }}</td>
                <td>{{ user.status }}</td>
                <td>
                    <a href="{{ path('admin_user_show', {'id': user.id}) }}" class="btn btn-primary">Voir</a>
                    <a href="{{ user.companyName is empty ? path('admin_user_edit', {'id': user.id}) : path('admin_user_edit_company', {'id': user.id}) }}" class="btn btn-primary">Editer</a>
                    <a href="{{ path('admin_user_edit_status', {'id': user.id}) }}" class="btn btn-warning">Changer le statut</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_user_new') }}" class="btn btn-primary">Nouvel utilisateur</a>
    <a href="{{ path('admin_user_company_new') }}" class="btn btn-primary">Nouvelle société</a>
    <a href="{{ path('admin_user_controller_new') }}" class="btn btn-primary">Nouveau controlleur</a>
{% endblock %}
