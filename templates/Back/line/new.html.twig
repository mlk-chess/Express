{% extends 'base_back.html.twig' %}

{% block title %}Ligne{% endblock %}

{% block body %}

<div class="pt-3">
    <div class='d-flex justify-content-between'>
        <h1 class="f-12">Cr√©er une ligne</h1>
        <div>
            <a class="btn btn-primary-express" href="{{ path('admin_line_index') }}">Liste des lignes</a>
        </div> 
    </div>

    {% if errors %}
    <div class="alert alert-danger" role="alert">
        {% for error in errors %}
            <li>{{ error }}</li>
        {%  endfor %}
    </div>
    {% endif %}

    {% if success %}
    <div class="alert alert-success" role="alert">
        {% for succ in success %}
            <li>{{ succ }}</li>
        {%  endfor %}
    </div>
    {% endif %}

<div class="p-4 mt-4 card">
    <div class="w-75">
        {{ include('Back/line/_form.html.twig') }}
    </div>
</div>
</div>
  
{% endblock %}
