{% extends 'base_back.html.twig' %}

{% block title %}Chatbot - Admin{% endblock %}
{% block stylesheets %}

    <style>
    .title{ 
        font-weight:bold !important;
        font-size:20px;
    }

    .subtitle{
        font-size:14px;
    }
    </style>
{% endblock%}
{% block body %}
<div class="p-4">
<h1>Chatbot</h1>

<div class="card p-4 mt-4 w-50">
        
        <div class="">
            <div>
                <div class="title">Nom du client</div>
                <div class="subtitle">{{ chatbot.clientName }}</div>
            </div>
            <hr>
            <div>
                <div class="title">Problème</div>
                <div class="subtitle">
                    {% if chatbot.clientProblem == 0 %}
                        Réservation
                    {% elseif chatbot.clientProblem == 1 %}
                        Paiement
                    {% elseif chatbot.clientProblem == 2 %}
                        Bug site
                    {% else %}
                        Autre ...
                    {% endif %} 
                </div>
            </div>
            <hr>
            <div>
                <div class="title">Description du problème</div>
                <div class="subtitle">{{ chatbot.description }}</div>
            </div>
            <hr>
            <div>
                <div class="title">Email du client</div>
                <div class="subtitle">{{ chatbot.clientEmail }}</div>
            </div>
            <hr>
            <div>
                <div class="title">Statut</div>
                <div class="subtitle">
                    {% if chatbot.status == 0 %} Ouvert
                    {% elseif chatbot.status == 1 %} En cours
                    {% else %} Fermé
                    {% endif %} 
                </div>
            </div>
        </div>
      
    </div>

    <div style="display: flex; " class="mt-3">
        <a class="btn btn-primary-express" href="{{ path('app_chatbot_index') }}">Retourner à la liste</a>
        <a class="btn btn-primary-express mx-2" href="{{ path('app_chatbot_edit', {'id': chatbot.id}) }}">Modifier le statut</a>


        {{ include('Back/chatbot/_delete_form.html.twig') }}

    </div>
</div>
{% endblock %}