{% extends 'base_back.html.twig' %}

{% block title %}PA EXPRESS{% endblock %}

{% block stylesheets %}
    <style>
        #banner {
            width: 500px;
            height: 300px;
            object-fit: cover;
        }

        #container-upload {
            width: 320px;
        }
    </style>
{% endblock %}

{% block body %}

<div class="mx-2">
    <h1>Paramètres</h1>


    <div class="row">
        <div class="col-sm-12 col-xl-6">
            <img src="{{ asset('img/banner.'~banner) }}" alt="banner" id="banner">


            <div class="mt-4" id="container-upload">
                {{ form_start(form, { 'attr' : { 'class': 'd-flex flex-column justify-content-center' } }) }}
                {{ form_label(form.imageFile) }}
                {{ form_widget(form.imageFile) }}

                <button type="submit" class="btn btn-lg btn-primary mt-3 mb-5">Upload</button>
                {{ form_end(form) }}
            </div>

            {% if error %}
                <div class="alert alert-danger">
                    <p>L'image doit être un jpg ou un png</p>
                </div>
            {% endif %}
        </div>
        <div class="col-sm-12 col-xl-6">
            <h4>Changement du mot de passe</h4>
            {{ form_start(formPwd) }}
            {{ form_label(formPwd.plainPassword.first) }}
            {{ form_widget(formPwd.plainPassword.first) }}
            {{ form_label(formPwd.plainPassword.second) }}
            {{ form_widget(formPwd.plainPassword.second) }}
            <div class="errorMessage">{{ form_errors(formPwd.plainPassword.first) }}</div>
            <div class="errorMessage">{{ form_errors(formPwd.plainPassword.second) }}</div>

            <div class="errorMessage">{{ form_errors(formPwd) }}</div>

            <button type="submit" class="btn btn-primary mt-2">Mettre à jour</button>
            {{ form_end(formPwd) }}
        </div>
    </div>

</div>

{% endblock %}
