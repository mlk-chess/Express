{% extends 'base_back.html.twig' %}

{% block title %}LineTrain{% endblock %}

{% block body %}


    <div class="d-flex justify-content-between">
        <h1>Voyage</h1>
        <div>
            <a class="btn btn-primary-express" href="{{ path('admin_line_train_index') }}">Retour</a>
        </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ line_train.id }}</td>
            </tr>

            <tr>
                <th>Départ</th>
                <td>{{ line_train.line.nameStationDeparture }}</td>
            </tr>

            <tr>
                <th>Arrivée</th>
                <td>{{ line_train.line.nameStationArrival }}</td>
            </tr>
            <tr>
                <th>Date départ</th>
                <td>{{ line_train.getDateDeparture()|date('d-m-Y')}} - {{line_train.getTimeDeparture()|date('H:i:s') }} </td>
            </tr>
            <tr>
                <th>Date d'arrivée</th>
                <td>{{ line_train.getDateArrival()|date('d-m-Y')}} - {{line_train.getTimeArrival()|date('H:i:s') }} </td>
            </tr>

            <tr>
                <th>Nombre de place classe 1</th>
                <td>{{ line_train.placeNbClass1 }}</td>
            </tr>

            <tr>
                <th>Nombre de place classe 2</th>
                <td>{{ line_train.placeNbClass2 }}</td>
            </tr>

            <tr>
                <th>Prix classe 1</th>
                <td>{{ line_train.priceClass1 }} €</td>
            </tr>

              <tr>
                <th>Prix classe 2</th>
                <td>{{ line_train.priceClass2 }} €</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex">
        <a class="btn btn-primary-express mx-2"href="{{ path('admin_line_train_edit', {'id': line_train.id}) }}">Modifier</a>
       
    </div>

{% endblock %}
