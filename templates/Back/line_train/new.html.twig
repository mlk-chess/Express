{% extends 'base_back.html.twig' %}

{% block title %}Voyages{% endblock %}

{% block body %}
<div>


    <div class='d-flex justify-content-between'>
        <h1 class="f-12">Cr√©er un voyage</h1>
        <div>
            <a class="btn btn-primary-express" href="{{ path('admin_line_train_index') }}">Liste des voyages</a>
        </div> 
    </div>

    {% if errors %}
    <div class="alert alert-danger" role="alert">
        {% for error in errors %}
            <li>{{ error }}</li>
        {%  endfor %}
    </div>
    {% endif %}

    {% if success %}
    <div class="alert alert-success" role="alert">
        {% for succ in success %}
            <li>{{ succ }}</li>
        {%  endfor %}
    </div>
    {% endif %}


    <div>
        {{ include('Back/line_train/_form.html.twig') }}
    </div>
</div>


{% endblock %}